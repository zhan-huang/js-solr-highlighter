{
  "name": "js-solr-highlighter",
  "version": "0.8.1",
  "description": "A JavaScript library for highlighting HTML text based on the query in the lucene/solr query syntax",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "lint": "eslint index.ts index.test.js --quiet --fix",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhan-huang/js-solr-highlighter.git"
  },
  "dependencies": {
    "lucene": "^2.1.1",
    "text-annotator": "^0.8.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "@types/node": "^14.14.6",
    "babel-jest": "^24.7.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^24.5.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.1.2",
    "typescript": "^4.0.5"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "pre-commit": [
    "test"
  ],
  "keywords": [
    "Lucene",
    "Query",
    "Highlighter",
    "JavaScript",
    "browser",
    "Node.js"
  ],
  "author": "Zhan Huang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zhan-huang/js-solr-highlighter/issues"
  },
  "homepage": "https://github.com/zhan-huang/js-solr-highlighter#readme"
}
